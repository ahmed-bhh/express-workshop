{% extends 'layout.twig' %}

{% block body %}
<div class="error-container">
  <h1>Error: {{message}}</h1>
  <h2>Status Code: {{error.status}}</h2>
  <pre>{{error.stack}}</pre>
</div>
{% endblock %}

{% block styles %}
<style>
  .error-container {
    max-width: 800px;
    margin: 50px auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: #f9f9f9;
    text-align: center;
  }
  .error-container h1 {
    color: #dc3545;
    font-size: 2em;
    margin-bottom: 20px;
  }
  .error-container h2 {
    color: #6c757d;
    font-size: 1.5em;
    margin-bottom: 20px;
  }
  .error-container pre {
    text-align: left;
    background-color: #f1f1f1;
    padding: 15px;
    border-radius: 5px;
    overflow-x: auto;
  }
</style>
{% endblock %}