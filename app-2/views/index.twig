{% extends 'layout.twig' %}

{% block body %}
<div class="index-container">
  <h1>{{title}}</h1>
  <p>Welcome to {{title}}</p>
</div>
{% endblock %}

{% block styles %}
<style>
  .index-container {
    max-width: 800px;
    margin: 50px auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: #f9f9f9;
    text-align: center;
  }
  .index-container h1 {
    color: #007bff;
    font-size: 2.5em;
    margin-bottom: 20px;
  }
  .index-container p {
    color: #6c757d;
    font-size: 1.2em;
  }
</style>
{% endblock %}